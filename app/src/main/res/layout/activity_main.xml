<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="0dp"
    android:id="@+id/rootLayout"
    android:background="@drawable/bg"
    tools:context="com.siva.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:text="Emergency Droid"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <TextView
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="Helper Cell App"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_rider_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Looking for Needy app?"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/txt_rider_app"
        android:layout_toStartOf="@+id/btnAccept"
        android:layout_marginEnd="38dp">

    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/btn_register_background"
        android:text="REGISTER"
        android:textColor="@color/btnRegister"
        android:layout_above="@+id/txt_rider_app"
        android:layout_alignEnd="@+id/linearLayout2" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:background="@drawable/btn_sign_in_background"
        android:text="SIGN IN"
        android:textColor="@android:color/white"
        android:layout_above="@+id/txt_rider_app"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_marginStart="17dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_one"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnRegister"
        android:layout_below="@+id/linearLayout2" />


</RelativeLayout>
